<li class="col-12 my-4">
    <div class="micropostline">
    <%= link_to gravatar_for(feed_item.user), feed_item.user %>
    <span class="user">
        <%= link_to feed_item.user.name, feed_item.user %>
    </span>
    <div class="container">
        <div class="row">
            <div class="col-1">
            </div>
                <div class="col-10">
                    <h4><%= feed_item.content %></h4>
                    <%= pluralize(feed_item.likes.count, "like") %>
                    <%= link_to raw("<i class='fa fa-thumbs-up'></i>"), like_micropost_path(feed_item) %>
                    <%= link_to raw("<i class='fa fa-thumbs-down text-danger'></i>"), dislike_micropost_path(feed_item) %> <br>
                    <span class="itemstanp">
                        Posted <%= time_ago_in_words(feed_item.created_at) %> ago.
                    </span>
                    <% if current_user?(feed_item.user) %>
                    <%= link_to raw("<i class='fa fa-trash text-success'></i>"), feed_item, method: :delete,
                    data: {confirm: "Are you sure?"},
                    title: feed_item.content %>
                    <% end %>
                </div>
            <div class="col-1">
            </div>
        </div>
    </div>
</li>