<% provide(:title, 'Home') %>
<% if logged_in? %>
    <div class="row">
        <aside class="col-3">
            <section>
                <%= render 'shared/user_info'%>
            </section>
            <section>
                <%= render 'shared/micropost_form'%>
            </section>
        </aside>
        <div class="col-9">
            <h3>Micropost Feed</h3>
            <%= render 'shared/feed' %>
        </div>
    </div>
<% else %>
    <div class="jumbotron jumbotron-fluid">
        <div class="container">
            <h1 class="display-4"><strong>Awesome Blog</strong></h1>
            <p class="lead">Welcome to Awesome Blog!</p>
        </div>
    </div>
<% end %>